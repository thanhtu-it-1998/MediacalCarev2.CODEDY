@model Policy

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card-box">
    <h4 class="m-2">Policy</h4>
    <div style="padding:30px">
        <div class="row">
            <div class="col">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="CompanyId" class="control-label"></label>
                        </div>
                        <div class="col-6">
                            <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                            <span asp-validation-for="CompanyId" class="text-danger"></span>
                        </div>
                    </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Name" class="control-label"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Description" class="control-label"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Amount" class="control-label"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Emi" class="control-label"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Emi" class="form-control" />
                                <span asp-validation-for="Emi" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class=" col-3 offset-4">
                                <input type="submit" value="Edit" class="btn btn-primary form-control text-white" />
                            </div>
                            <div class=" col-3 ">
                                <a asp-action="Index" class="btn btn-success form-control text-white">Back to List</a>
                            </div>
                        </div>
</form>
            </div>
        </div>

    </div>
</div>