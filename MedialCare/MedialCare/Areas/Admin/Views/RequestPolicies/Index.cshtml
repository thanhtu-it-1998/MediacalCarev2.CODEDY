@{
    ViewData["Title"] = "Request";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card-box pb-10">
    <div class="h5 pd-20 mb-0 ml-1">Recent Patient</div>
    <p class="ml-4">All bootstrap element classies</p>
    
    <table class="data-table table nowrap">
        <thead>
            <tr>
                <th class="table-plus">Company</th>
                <th>Policies</th>
                <th>User</th>
                <th>Date</th>
                <th>Status</th>
                <th class="datatable-nosort">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Company
                    </td>
                    <td>
                        @item.Policies
                    </td>
                    <td>
                        @item.User
                    </td>
                    <td>
                        @item.Date
                    </td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-area="Admin" asp-controller="RequestPolicies" asp-action="Delete" asp-route-id="@item.ID" data-color="#e95959" class="font-20" title="Delete"><i class="icon-copy dw dw-delete-3"></i></a>
                    </td>
                </tr>
            }

        </tbody>

    </table>
   
</div>