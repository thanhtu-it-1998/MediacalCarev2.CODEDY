@model User

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="invoice-wrap">
    <div class="page-header">
        <h4 class="text-center mb-30 weight-600">Details</h4>
        <div class="row pb-30">
            <div class="col-md-6">
                <h5 class="mb-15">Name: <span class="font-weight-bold"> @Html.DisplayFor(model => model.FirstName)</span></h5>
                <p class="font-14 mb-5">Date: <strong class="weight-600">@Html.DisplayFor(model => model.LastName)</strong></p>
                <p class="font-14 mb-5">Code <strong class="weight-600">@Html.DisplayFor(model => model.Level)</strong></p>
                <p class="font-14 mb-5">Code <strong class="weight-600">@Html.DisplayFor(model => model.Gender)</strong></p>
                <p class="font-14 mb-5">Code <strong class="weight-600">@Html.DisplayFor(model => model.JoinDate)</strong></p>
            </div>

        </div>
        <div class="invoice-desc pb-30">
            <div class="invoice-desc-head clearfix">
                <div class="invoice-sub">Email</div>
                <div class="invoice-rate">Phone</div>
                <div class="invoice-hours">Address</div>
                <div class="invoice-hours">Salary</div>
            </div>
            <div class="invoice-desc-body">
                <ul>
                    <li class="clearfix">
                        <div class="invoice-sub">@Html.DisplayFor(model => model.Email)</div>
                        <div class="invoice-rate">
                            @Html.DisplayFor(model => model.Phone)
                        </div>
                        <div class="invoice-hours">
                            @Html.DisplayFor(model => model.Address)
                        </div>
                        <div class="invoice-hours">
                            @Html.DisplayFor(model => model.Salary)
                        </div>
                    </li>
                </ul>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </form>
            </div>

        </div>
    </div>
</div>