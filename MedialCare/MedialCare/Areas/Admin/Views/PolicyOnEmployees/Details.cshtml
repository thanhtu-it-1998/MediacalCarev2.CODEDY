@model PolicyOnEmployee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="invoice-wrap">
    <div class="page-header">
        <h4 class="text-center mb-30 weight-600">Details</h4>

        <div class="row pb-30">
            <div class="col-md-6">
                <h5 class="mb-15">Name Policy: <span class="font-weight-bold"> @Html.DisplayFor(model => model.User.Username)</span></h5>
                <h5 class="mb-15">Name Policy: <span class="font-weight-bold"> @Html.DisplayFor(model => model.Policy.Name)</span></h5>
                <p class="font-14 mb-5">Policy Amount: <strong class="weight-600">@Html.DisplayFor(model => model.Policy.Amount)</strong></p>
            </div>

        </div>
        <div class="invoice-desc pb-30">
            <div class="invoice-desc-head clearfix">
                <div class="invoice-sub">Start Date</div>
                <div class="invoice-rate">End Date</div>
                <div class="invoice-hours">Status</div>
            </div>
            <div class="invoice-desc-body">
                <ul>
                    <li class="clearfix">
                        <div class="invoice-sub">@Html.DisplayFor(model => model.StartDate)</div>
                        <div class="invoice-rate">
                            @Html.DisplayFor(model => model.EndDate)
                        </div>
                        <div class="invoice-hours">
                            @Html.DisplayFor(model => model.Status)
                        </div>
                    </li>
                </ul>
                <div class="m-2">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
                    <a class="btn btn-success" asp-action="Index">Back to List</a>
                </div>
            </div>

        </div>
    </div>
</div>