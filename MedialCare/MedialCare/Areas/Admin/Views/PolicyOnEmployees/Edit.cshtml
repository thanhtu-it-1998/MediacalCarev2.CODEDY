@model PolicyOnEmployee

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card-box">
    <h4 class="m-2">PolicyOnEmployee</h4>
    <div style="padding:30px">
        <div class="row">
            <div class="col">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger offset-4"></div>
                    <div class="form-group row">
                        <div class="col-4">

                        </div>
                        <div class="col-6">
                            <select asp-for="PolicyId" class="form-control" asp-items="ViewBag.PolicyName" hidden></select>
                            <span asp-validation-for="PolicyId" class="text-danger" ></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">

                        </div>
                        <div class="col-6">
                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserName" hidden></select>
                            <span asp-validation-for="UserId" class="text-danger" ></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">

                        </div>
                        <div class="col-6">
                            <input asp-for="StartDate" class="form-control" type="hidden" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">

                        </div>
                        <div class="col-6">
                            <input asp-for="EndDate" class="form-control" type="hidden" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Status" class="control-label"></label>
                            </div>
                            <div class="col-6">
                                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()"></select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class=" col-3 offset-4">
                            <input type="submit" value="Edit" class="btn btn-primary form-control text-white" />
                        </div>
                        <div class=" col-3 ">
                            <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>