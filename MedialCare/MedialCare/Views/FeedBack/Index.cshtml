@model FeedBack
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="title">
                        <h4>Feed Back</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="pd-20 card-box mb-30">
            <div class="row">
                <div class="col">
                    <form asp-action="Index">
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="FullName" class="font-weight-bold"></label>
                            </div>
                            <div class="col-6">
                                <input class="form-control" asp-for="FullName" placeholder="Full Name...">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Email" class="font-weight-bold"></label>
                            </div>
                            <div class="col-6">
                                <input class="form-control" asp-for="Email" placeholder="Email...">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col-4">

                                <label asp-for="Phone" class="font-weight-bold"></label>
                            </div>
                            <div class="col-6">

                                <input class="form-control" asp-for="Phone" placeholder="Phone...">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group row html-editor ">
                            <div class="col-4">

                                <label asp-for="Content" class="font-weight-bold"></label>
                            </div>
                            <div class="col-6  ">

                                <textarea class="form-control  " asp-for="Content"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group row">
                            <div class=" col-1">
                                <input type="submit" value="Send" onclick ="alert('You submitted the feed back successfully')" class="btn btn-primary  w-100 form-control text-white" />
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div class="footer-wrap pd-20 mb-20 card-box">
            Copyright © 2020 by <a asp-controller="home" asp-action="index">Medical Care</a>. All right reserved.
        </div>
    </div>
</div>
