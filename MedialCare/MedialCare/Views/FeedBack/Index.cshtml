@model FeedBack
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="title">
                        <h4>Feed Back</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Form Feed Back</h4>
                    <p class="mb-30">All bootstrap element classies</p>
                </div>

            </div>
            <form asp-action="Index">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input class="form-control" asp-for="FullName" placeholder="Johnny Brown">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" value="bootstrap@example.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone"></label>
                    <input class="form-control" asp-for="Phone" placeholder="1-(111)-111-1111">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea class="form-control" asp-for="Content"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
        <div class="footer-wrap pd-20 mb-20 card-box">
            Copyright © 2020 by <a asp-controller="home" asp-action="index">Medical Care</a>. All right reserved.
        </div>
    </div>
</div>
