@{
    ViewData["Title"] = "Pay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model RequestPay

    <div class="invoice-wrap">
        <div class="invoice-box">
            <div class="invoice-header">
                <div class="logo text-center">
                    <img src="vendors/images/deskapp-logo.png" alt="">
                </div>
            </div>
            <h4 class="text-center mb-30 weight-600">PAY</h4>
            <div class="row pb-30">
                <div class="col-md-6">
                    <p class="font-14 mb-5">Company Name: <strong class="weight-600">@Model.CompanyName </strong></p>
                    <p class="font-14 mb-5">Policy Name: <strong class="weight-600">@Model.Name</strong></p>
                </div>
            </div>

            <table class="data-table table nowrap">
                <thead>
                    <tr>
                        <th class="table-plus">Description</th>
                        <th>Amount</th>
                        <th>Emi</th>
                    </tr>
                </thead>
                <tbody>
                        <tr>
                            <td class="table-plus">
                                @Model.Description
                            </td>
                            <td>@Model.Amount</td>
                            <td>@Model.Emi</td>
                </tbody>

            </table>
            <a asp-controller="Home" asp-action="PolicyHandl" asp-route-id="@Model.ID" onclick="alert('You submitted the request successfully')" class="btn btn-info text-white ml-2">Request</a>
            <h4 class="text-center pb-20">Thank You!!</h4>
        </div>
    </div>