@model ListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-box pb-10">
    <div class="h5 pd-20 mb-0 ml-1">Recent Patient</div>
    <p class="ml-4">List of polycies</p>
    <div class="m-2 row">
        <div class="col-8">
            <a asp-area="Admin" asp-controller="Policies" asp-action="Create" class="btn btn-outline-info">Create New</a>
        </div>
        <div class="header-search float-lg-right col-4">
            <form asp-action="Index">
                <div class="form-group mb-0 ">
                    <input type="text" class="form-control search-input" name="keySearch" placeholder="Search Here">
                </div>
            </form>
        </div>
    </div>
    <table class="data-table table nowrap">
        <thead>
            <tr>
                <th class="table-plus">Name</th>
                <th>Description</th>
                <th>Amount</th>
                <th>Emi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Policy)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td style="display: block;width: 200px;overflow:hidden; white-space:nowrap;text-overflow:ellipsis">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Emi)
                    </td>
                </tr>
            }

        </tbody>

    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <div page-model="@Model.PagingModel" page-action="Index"
                 page-class="btn page-item " page-class-normal="btn-outline-dark"
                 page-classes-enabled="true" page-class-selected="  btn-info"
                 class="font-weight-bold float-lg-right  m-4">

            </div>
        </ul>
    </nav>
</div>